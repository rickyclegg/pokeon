{
  "name": "pokeon",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/src/index.js",
    "dev": "concurrently --kill-others-on-fail --kill-others \"npx tsc --watch\" \"nodemon -q dist/src/index.js\"",
    "lint": "eslint '**/*.ts?(x)' --color --ignore-path .gitignore --cache",
    "lint:fix": "eslint '**/*.ts?(x)' --fix --color --ignore-path .gitignore --cache",
    "test": "concurrently -s --kill-others-on-fail npm:lint:fix npm:test:unit npm:test:acceptance",
    "test:unit": "jest",
    "test:acceptance": "jest --config=jest.acceptance.config.js",
    "ncdc:serve": "ncdc serve ./black-box-tests/cdc-config.yml --watch 4000",
    "ncdc:test": "ncdc test ./black-box-tests/cdc-config.yml https://pokeapi.co/api/v2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "node-fetch": "^2.6.1",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@jest/globals": "^29.5.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.2",
    "@types/node-fetch": "^2.6.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "ncdc": "^2.10.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
